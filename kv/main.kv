<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            id: display
            font_size: dp(50)
            text: "yhh"
            
        ActivityButton:
            text: "Choose Activity"
            font_size: 40
            size_hint_y: 0.4
            on_release: root.manager.current = 'activities'
            
        Label:
            id: sensors
            font_size: dp(50)
            text: '0 Devices'
            
        TextInput:
            id: mac_input
            focus: True
            size_hint_y: 0.2
            
        Button:
            id: register
            text: "Discover Device"
            size_hint_y: 0.4
            on_press: root.select_device()    
        
            
<ActivitiesScreen>:
    id: activities
    BoxLayout:
        orientation: "vertical"
        Button:
            id: test_accel
            text: 'test accel'
            on_release: root.testAccel()
        Label:
            id: accel
            font_size: dp(50)
            text: "accel"
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'main'
            
<AccelScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            id: accel2
            font_size: dp(50)
            text: "accel"
        Button:
            text: 'Back to activities'
            on_press: root.manager.current = 'activities'