BoxLayout:
    orientation: 'vertical'
    Label:
        id: time
        text: '[b]00:00[/b]'
        font_name: './fonts/DSEG7Classic-Regular.ttf'
        font_size: 100
        markup: True
        
    Label:
        id: activity
        text: 'StrikeSense'
        font_size: 50
        
    BoxLayout:
        size_hint_y: 0.5
        size_hint_x: 1
        pos_hint_y: 0
        Button:
            id: bt_connect
            text: 'Connect'
            on_press: app.register()
            
    BoxLayout:
        size_hint_y: 0.5    
        Button:
            pos_hint: {'x': 5000, 'y': 5000}
            id: bt_start_stop
            text: 'Reset'
            on_press: app.start_stop()