<Container>:
    display: display
    rows: 1
    BoxLayout:
        orientation: "vertical"
        DeviceButton:
            on_release: root.enter_mac()
        SubtractButton:
            on_release: root.subtract_one()
        MacInput:
            orientation: "vertical"
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        TextInput:
            id: mac_input
            size_hint_x: 20
        Button:
            id: register
            text: "Enter Mac Address"
            size_hint_x: 20
            on_press: root.register()
            
    Label:
        id: display
        font_size: dp(50)
        text: '0'
        
